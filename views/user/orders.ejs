<%- include('../partials/userPartial.ejs') %>
<div class="container mt-5">
  <% if(orderDetails.length !==0){ %>
  <% orderDetails.forEach((order)=>{ %>
  <div class="col-md-12 p-3" style="border: 1px solid">
    <div class="row">
      <div
        class="col-md-3 justify-content-center d-flex flex-column align-item-center"
      >
        <div>
          <b>Order Id: </b><br />
          # <%= order._id %>
        </div>
      </div>
      <div class="col-md-3 d-flex flex-column">
        <b>Total Amount:</b>&nbsp;Rs. <%= order.totalAmount %><br />
        <b>Payment:</b> <%= order.paymentMethod %>( <%= order.paymentStatus %> )
      </div>
      <div class="col-md-3 d-flex flex-column">
        <strong>Order Status: </strong>
        <% if(order.orderStatus === "pending"){ %>
        <small class="text-warning"><%= order.orderStatus %></small><br />
        <% }else if(order.orderStatus === "shipped"){ %>
        <small class="text-info"><%= order.orderStatus %></small><br />
        <% }else if(order.orderStatus === "delivered"){ %>
        <small class="text-success"><%= order.orderStatus %></small><br />
        <% }else if(order.orderStatus === "cancelled"){ %>
        <small class="text-danger"><%= order.orderStatus %></small><br />
        <% } %>
        <b>delivery expected: </b> <%= order.deliveryDate %>
      </div>
      <div
        class="col-md-3 justify-content-center d-flex flex-row align-items-center"
      >
        <a href="/viewOrderProducts/<%= order._id %>"
          ><button
            type="button"
            class="btn btn-dark btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#model- data.order_id "
          >
            View Products
          </button></a
        >
        <button
            type="button" 
            class="btn btn-danger btn-sm mx-2"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal-<%= order._id %>"
          >
            Cancel
          </button>
          <div
            class="modal fade"
            id="exampleModal-<%= order._id %>"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">
                    Cancel Payment
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">Cancel your order</div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <a href="/cancelOrder/<%= order._id %>"
                    ><button type="button" class="btn btn-primary">
                      Confirm
                    </button></a
                  >
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>
<div class="container mb-5 mt-5">
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
      <li class="page-item">
        <a class="page-link" href="/orderDetails?page=1">First</a>
      </li>
      <% for (let i=1; i<= pages ; i++){ %> <% if( i == pageNum){ %>
      <li class="page-item active">
        <a class="page-link" href="/orderDetails?page=<%= i %>"><%= i %></a>
      </li>
      <% }else{ %>
      <li class="page-item">
        <a class="page-link" href="/orderDetails?page=<%= i %>"><%= i %></a>
      </li>
      <% } %> <% } %>
      <li class="page-item">
        <a class="page-link" href="/orderDetails?page= <%= pages %>">Last</a>
      </li>
    </ul>
  </nav>
  <% }else{ %>
    <div>
    <center class="col-xl-12 col-md-6 col-sm-4">
      <h1 style="color: red">You Havent Ordered Anything Yet...</h1>
      <img
        class="image-fluid col-xl-12 col-md-6 col-sm-4 mt-5"
        src="/user/images/out-of-stock.png"
        alt=""
        style="width: 14rem"
      /><br />
      <a
        class="btn btn-succes"
        href="/userhome"
        style="margin-top: 17px; color: green; border: solid green"
        >SHOP NOW</a
      >
    </center>
  </div>
  <% } %>
</div>
<%- include('../partials/user-footer.ejs') %>

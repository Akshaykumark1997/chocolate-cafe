<%- include('../partials/userPartial.ejs') %>
<% if(productData.length===0){ %>
  <center class="col-xl-12 col-md-6 col-sm-4">
    <h1 style="color: red">You Havent Ordered Anything Yet...</h1>
    <img class="image-fluid col-xl-12 col-md-6 col-sm-4 mt-5" src="/user/images/out-of-stock.png"
      alt="" style="width: 14rem" /><br />
    <a class="btn btn-succes" href="/userhome" style="
                          margin-top: 17px;
                          color: green;
                          border: solid green;
                        ">SHOP NOW</a>
  </center>
  <% }else{ %>
<div class="container table-responsive mt-5 mb-5">
    <% if(orderDetails.length !==0){ %>
  <table class="table table-hover table-light">
    <thead>
      <tr>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          Date
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          Fullname
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          Address
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          Mobile
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          paymentMethod
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          PaymentStatus
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          orderStatus
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          Amount
        </th>
        <th scope="col" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          Options
        </th>
      </tr>
    </thead>
    <tbody>
      <% orderDetails.forEach((order)=>{ %>
      <tr>
        <th scope="row" class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.createdAt %>
        </th>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.fullname %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.address %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.mobile %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.paymentMethod %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.paymentStatus %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.orderStatus %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
          <%= order.totalAmount %>
        </td>
        <td>
         <a href="/viewOrderProducts/<%= order._id %>"> <button
            type="button"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            class="btn btn-info text-white"
            style="background-color: #57423f"
          >
            View Product
          </button></a>
          <a href="/cancelOrder/<%= order._id %>"
            ><button type="button" class="btn btn-danger">Cancel</button></a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% }else{ %>
    <div>
        <h3>You Havent Ordered Anything Yet...</h3>
    </div>
    <% } %>
</div>
<% } %>
<%- include('../partials/user-footer.ejs') %>

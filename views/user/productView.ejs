<%- include('../partials/userPartial.ejs') %>
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
     
      <div class="col-md-6">
        <button
                  id="wishButton"
                  class="btn btn-outline-none"
                  onclick="addToWishlist('<%= data._id %>')"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                    version="1.1"
                    width="25"
                    height="25"
                    viewBox="0 0 256 256"
                    xml:space="preserve"
                  >
                    <defs></defs>
                    <g
                      style="
                        stroke: none;
                        stroke-width: 0;
                        stroke-dasharray: none;
                        stroke-linecap: butt;
                        stroke-linejoin: miter;
                        stroke-miterlimit: 10;
                        fill: none;
                        fill-rule: nonzero;
                        opacity: 1;
                      "
                      transform="translate(1.4065934065934016 1.4065934065934016) scale(2.81 2.81)"
                    >
                      <path
                        d="M 64.44 12.016 c 5.225 0 10.136 2.035 13.831 5.729 c 7.626 7.626 7.626 20.035 0 27.662 l -19.44 19.44 L 45 78.677 L 31.169 64.846 l -19.44 -19.44 c -7.626 -7.626 -7.626 -20.035 0 -27.662 c 3.694 -3.694 8.606 -5.729 13.831 -5.729 c 5.225 0 10.136 2.035 13.831 5.729 l 1.367 1.367 L 45 23.354 l 4.242 -4.242 l 1.367 -1.367 C 54.304 14.05 59.216 12.016 64.44 12.016 M 64.44 6.016 c -6.541 0 -13.083 2.495 -18.073 7.486 L 45 14.869 l 0 0 l 0 0 l -1.367 -1.367 C 38.642 8.511 32.101 6.016 25.56 6.016 S 12.477 8.511 7.486 13.502 c -9.982 9.982 -9.982 26.165 0 36.147 l 19.44 19.44 c 0 0 0 0 0.001 0 L 45 87.163 l 18.073 -18.073 c 0 0 0 0 0 0 l 19.44 -19.44 c 9.982 -9.982 9.982 -26.165 0 -36.147 C 77.523 8.511 70.982 6.016 64.44 6.016 L 64.44 6.016 z"
                        style="
                          stroke: none;
                          stroke-width: 1;
                          stroke-dasharray: none;
                          stroke-linecap: butt;
                          stroke-linejoin: miter;
                          stroke-miterlimit: 10;
                          fill: rgb(0, 0, 0);
                          fill-rule: nonzero;
                          opacity: 1;
                        "
                        transform=" matrix(1 0 0 1 0 0) "
                        stroke-linecap="round"
                      />
                    </g>
                  </svg>
                </button>
        <img
          class="card-img-top mb-5 mb-md-0"
          src="/admin/products/<%= data._id %>.jpg"
          alt="..."
        />
      </div>
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= data.product %></h1>
        <div class="fs-5 mb-5 mt-5">
          <h5 class="">Category: <%= data.category %>
          </h5>
        </div>
        <div class="fs-5 mb-5 mt-5">
          <h5 class="">Rs.<%= data.price %></h5>
        </div>
        <p class="lead"><%= data.description %></p>
        <% if(data.stock <= 3 && data.stock >= 1){ %>
          <div class="fs-5 mb-5 mt-5">
            <h5 class="">Stock :<%= data.stock %>
              <p class="text-danger mt-2">Only few left hurry !!!!!!</p>
            </h5>
          </div>
          <% }else if(data.stock == 0){ %>
        <div class="fs-5 mb-5 mt-5">
          <h5 class="">Stock :<%= data.stock %>
          </h5><p class="text-danger mt-2" id="message">Out of stock !!!!!!</p>
        </div>
        <% }else{ %>
          <div class="fs-5 mb-5 mt-5">
            <h5 class="">Stock :<%= data.stock %>
            </h5>
          </div>
          <% } %>
        <% if(session) { %>
        <div class="d-flex">
           <% if(cartExist == 0){ %>
          <button id="cartButton" class="btn btn-outline-dark mt-auto" onclick="addToCart('<%= data._id %>')">Add to Cart</button>
          <% }else{ %>
          <a href="/cart"><button id="cartButton" class="btn btn-outline-dark mt-auto">Go to Cart</button></a>
          <% } %>
        <% }else{ %>
        <div class="d-flex">
          <a href="/user"><button class="btn btn-outline-dark mt-auto" id="">Add to Cart</button></a>
          <p id="exist" class="text-danger"></p>
        </div>
        <% } %>
      </div>
        
      </p>
    </div>
  </div>
</section>
<%- include('../partials/user-footer.ejs') %>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
